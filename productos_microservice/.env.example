# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://productos_user:productos_pass@localhost:5432/productos_db

# ===========================================
# Flask Configuration
# ===========================================
SECRET_KEY=tu-clave-secreta-aqui
PORT=5008

# ===========================================
# AWS Configuration
# ===========================================
# Habilitar/deshabilitar AWS (true/false)
USE_AWS=true

# Credenciales de AWS (si no usas IAM roles)
AWS_ACCESS_KEY_ID=tu-access-key-aqui
AWS_SECRET_ACCESS_KEY=tu-secret-key-aqui
AWS_REGION=us-east-1

# ===========================================
# SQS Configuration (Queue URLs completas)
# ===========================================
# URL completa de la cola SQS FIFO
# Ejemplo: https://sqs.us-east-1.amazonaws.com/123456789012/productos-importacion-queue.fifo
AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/TU_ACCOUNT_ID/productos-importacion-queue.fifo

# Nombre de la Dead Letter Queue (DLQ)
AWS_SQS_DLQ_NAME=productos-importacion-dlq.fifo

# ===========================================
# S3 Configuration
# ===========================================
# Nombre del bucket S3 para almacenar CSVs
AWS_S3_BUCKET_NAME=medisupply-csv-imports

# ===========================================
# Upload Configuration (para sync uploads)
# ===========================================
MAX_CONTENT_LENGTH=5242880  # 5MB
UPLOAD_FOLDER=uploads

# ===========================================
# Worker Configuration
# ===========================================
# Umbral para decidir entre sync/async (número de filas)
UMBRAL_ASINCRONO=100

# Tamaño de lote para commits (número de productos por commit)
BATCH_SIZE=50
