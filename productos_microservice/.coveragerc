[run]
source = app
omit = 
    */tests/*
    */test_*
    */__pycache__/*
    */site-packages/*
    # Excluir servicios de infraestructura AWS (difíciles de testear sin mocks complejos)
    */app/services/s3_service.py
    */app/services/sqs_service.py
    # Excluir configuración de AWS  
    */app/config/aws_config.py
    # Excluir rutas (endpoints) que requieren tests de integración
    */app/routes/productos_bp.py
    # Excluir worker (ya tiene tests pero complejidad alta)
    */app/workers/sqs_worker.py

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    
precision = 2
show_missing = True

[html]
directory = htmlcov
